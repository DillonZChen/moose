Bootstrap: docker
From: ubuntu:22.04

%files
    moose /moose/
    ext /moose/

    *.py /moose/
    *.sh /moose/
    requirements.txt /moose/

%post
    # Install all necessary dependencies.
    apt-get update

    export DEBIAN_FRONTEND=noninteractive

    apt install -y software-properties-common
    add-apt-repository -y ppa:apptainer/ppa
    apt-get update

    apt-get install -y --no-install-recommends \
        git \
        python2 \
        python3 \
        python3-tk \
        python3-pip \
        python3-dev \
        python3-distutils \
        python3-setuptools \
        build-essential \
        g++ \
        cmake \
        libboost-all-dev \
        apptainer

    # Move into repo and build.
    cd /moose
    sh install.sh

    # Clean up.
    apt-get clean
    rm -rf __pycache__/
    rm -rf /var/lib/apt/lists/*

%runscript
    #!/bin/bash

    if [ "$#" -lt 1 ]; then
        echo "Usage: ./moose.sif <train|policy|search> <args>"
        exit 1
    fi

    command=$1
    shift

    if [ "$command" = "train" ]; then
        python3.10 /moose/train.py "$@"
    elif [ "$command" = "policy" ]; then
        python3.10 /moose/policy.py "$@"
    elif [ "$command" = "search" ]; then
        python3.10 /moose/search.py "$@"
    else
        echo "Usage: ./moose.sif <train|policy|search> <args>"
        exit 1
    fi

%labels
    Name        moose
    Description Satisficing and Optimal Generalised Planning via Regression Rewriting
    Authors     Dillon Z. Chen <dillon.chen1@gmail.com>
